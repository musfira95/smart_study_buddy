<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvTranscriptionContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sample transcription text here. This will show the text of your uploaded audio in full length and can be very long."
            android:textSize="16sp"
            android:textColor="#000000"
            android:paddingBottom="20dp"/>
    </ScrollView>

    <Button
        android:id="@+id/btnSummarize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Summarize"
        android:padding="16dp"
        android:layout_marginTop="16dp"/>
</LinearLayout>
